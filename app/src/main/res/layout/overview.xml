<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/person"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/appBar"
        android:layout_height="300dp"
        >


        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleGravity="top"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:src="#009"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:id="@+id/personal"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:background="@drawable/t"
        android:fillViewport="true"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingTop="50dp"

        android:paddingRight="25dp"

        android:visibility="visible"
        app:behavior_overlapTop="20dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#000"
            android:maxLines="1"
            android:id="@+id/name"
            android:background="@drawable/around"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="25dp"
            android:gravity="center|left"
            android:paddingLeft="8dp"
            android:text="Akwasi Konadu Williams"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#000"
            android:maxLines="1"
            android:id="@+id/contact"
            android:background="@drawable/around"
            android:drawableLeft="@drawable/ic_call_black_24dp"
            android:drawablePadding="25dp"
            android:gravity="center|left"
            android:paddingLeft="8dp"
            android:text="0241539561"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#000"
            android:maxLines="1"
            android:id="@+id/bday"
            android:background="@drawable/around"
            android:drawableLeft="@drawable/ic_calendar_one"
            android:drawablePadding="25dp"
            android:gravity="center|left"
            android:paddingLeft="8dp"
            android:text="Sun, 24 June , 1990"></TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#000"
            android:maxLines="1"
            android:id="@+id/genders"
            android:background="@drawable/around"
            android:drawableLeft="@drawable/ic_wc_black_24dp"
            android:drawablePadding="25dp"
            android:gravity="center|left"
            android:paddingLeft="8dp"
            android:text="Male"></TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/around"
            android:drawableLeft="@drawable/ic_baseline_work_24"
            android:drawablePadding="25dp"
            android:gravity="center|left"
            android:paddingLeft="8dp"
            android:id="@+id/occupations"
            android:textColor="#000"
            android:maxLines="1"
            android:text="Engineer"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#000"
            android:background="@drawable/around"
            android:drawableLeft="@drawable/ic_wc_black_24dp"
            android:drawablePadding="25dp"
            android:id="@+id/mstatuss"
            android:gravity="center|left"
            android:paddingLeft="8dp"
            android:maxLines="1"
            android:text="Married"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#000"
            android:background="@drawable/around"
            android:drawableLeft="@drawable/ic_location_on_black_24dp"
            android:drawablePadding="25dp"
            android:id="@+id/locations"
            android:gravity="center|left"
            android:paddingLeft="8dp"
            android:maxLines="1"
            android:text="Teshie Nungua"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:textColor="#000"
            android:background="@drawable/around"
            android:drawableLeft="@drawable/ic_baseline_escalator_warning_24"
            android:drawablePadding="25dp"
            android:id="@+id/baptiz"
            android:gravity="center|left"
            android:paddingLeft="8dp"
            android:maxLines="1"
            android:text="Baptized"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/around"
            android:drawableLeft="@drawable/ic_baseline_local_fire_department_24"
            android:drawablePadding="25dp"
            android:gravity="center|left"
            android:id="@+id/baptize_spirit"
            android:paddingLeft="8dp"
            android:textColor="#000"
            android:maxLines="1"
            android:text="Speaks in tongue"></TextView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>